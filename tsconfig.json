{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "lib": ["es2022", "dom", "DOM.Iterable"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.vue", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
